{
  "name": "carscore",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install": "cd client && npm install && cd ../server && npm install && cd ..",
    "client_serve": "cd client && vue-cli-service serve && cd ..",
    "client_build": "cd server && vue-cli-service build && cd ..",
    "client_lint": "cd client && vue-cli-service lint && cd ..",
    "server_dev": "cd server && nodemon ./server/server.js && cd ..",
    "server_train_nn": "cd server/api/services/scoring/neuralNet && node train && cd ../../../../..",
    "postinstall": "cd client && npm run build && cd ../server && npm run build && cd ..",
    "start": "cd server && cross-env NODE_ENV=production npm run start && cd .."
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  }
}
